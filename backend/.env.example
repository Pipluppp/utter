# Environment
ENV=development

# Database (SQLite for local dev)
DATABASE_URL=sqlite+aiosqlite:///./utter.db

# Upload directory
UPLOAD_DIR=./uploads

# TTS Provider (only "qwen" supported)
TTS_PROVIDER=qwen

# Transcription (Mistral Voxtral)
# NOTE: Keep this server-side only. Do not expose to the browser.
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL_TRANSCRIBE_MODEL=voxtral-mini-2602
MISTRAL_REALTIME_MODEL=voxtral-mini-transcribe-realtime-2602
TRANSCRIPTION_ENABLED=true
